<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head')  %> 

  <body>
    <%- include('partials/header') %>
    <title>Login</title>
  
      <main class="mainLoginRegister">
      <div class="login-register">
        <section class="login1">
          <div>
            <h2 class="title">Login</h2>
            <h5 class="subtitle">Home > Registrate</h5>
          </div>
          <form  method="POST" action="/user/login">
            <div class="inputLogin">
              <div class="form-format">
                <label for="email">Email</label>
                <input class="format-input" name="email" type="email" placeholder="ariel@perez.com">
              </div>
                <div class="form-format">
                  <label for="password">Contraseña</label>
                  <input class="format-input" type="password" name="password">
                </div>
                <div class="checkRemember">
                  <p class="remember">Recordar cuenta</p>
                  <input class ="checkButton" type="checkbox" name="remember" value="remember">
                </div>
                <% if (typeof errorsLogin != "undefined") { %>
                  <p style="color:red">Error</p>
                  <ul>
                    <% for (let i=0; i<errorsLogin.length; i++) { %>
                      <li>
                        <%= errorsLogin[i].msg %>
                      </li>
                    <% } %>
                  </ul> 
                <% } %>
                <input class="form-button" type="submit" value="Ingresar">
          </form>
          </div>
        </section>
        <section class="register">
          <div>
            <h2 class="title">Crear cuenta</h2>
            <h5 class="subtitle">Home > Registrate</h5>
          </div>
          <div class="formulario">
            <form method="POST" action="/user/register" enctype="multipart/form-data">
              <div class="form-format">
                <label for="name">Nombre</label>
                <input class="format-input" type="text" minlength="6" name="name" value="<%= locals.old && old.name ? old.name : '' %>">
              </div>
              <div class="form-format">
                <label for="apellido">Apellido</label>
                <input class="format-input" type="text" minlength="6" name="apellido" value="<%= locals.old && old.apellido ? old.apellidos : '' %>">
              </div>
              <div class="form-format">
                <label for="user">¿Cómo querés que te agendemos?</label>
                <input class="format-input" type="text" minlength="6" name="user" value="<%= locals.old && old.user ? old.user : '' %>">
              </div>
              <div class="form-format">
                <label for="avatar">Avatar</label>
                <input class="format-input" type="file" name="avatar">
              </div>
              <div class="form-format">
                <label for="email">Email</label>
                <input class="format-input" type="email" name="email" placeholder="ariel@perez.com"value="<%= locals.old && old.email ? old.email : '' %>">
              </div>
              <div class="form-format">
                <label for="password">Contraseña</label>
                <input class="format-input" type="password" minlength="6" name="password">
              </div>
              <!-- <div class="form-format">
                <label for="password">Confirmar contraseña</label>
                <input class="format-input" type="password" minlength="6" name="password">
              </div> -->
              <button class="form-button" type="submit">Crear cuenta</button>
            </form>
                    
          </div>
              <% if (typeof errors != "undefined") { %>
                <p style="color:red">Error</p>
              <% errors.forEach(error => { %>
                <p class="feedback is-danger"><%= error.msg %></p>
              <% })} %>
        </section>
      </div>
    <section class="emailUpdates">
        <h5>Ingresá tu email para recibir novedades</h5>
        <label for="email">
          <input class="format-input" type="email" name="email" placeholder="juan@perez.com">
          <button class="form-button" type="submit" name=""><a href="./">Enviar</a></button>
        </label>
    </section>
  </main>
  
  <%- include('partials/footer')  %> 

</body>
</html>