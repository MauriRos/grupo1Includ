<!DOCTYPE html>
<html lang="en">
  <%- include('partials/head')  %> 
  
  <body>
    <%- include('partials/header') %> 

    <main>
      <!-- aca voy a meter el cuerpo del home - trabajo mobilefirst   -->
            
      <section>

            <!-- <h1 class="category"> TOP </h1> -->

              <div class="tarjeta">  
                 <%products.forEach(product => { %>

                  <article class="card"><a href="/products/<%= product.id %>">
                        <img class="image" src="/images/products/<%= product.image[0] %>" alt="<%= product.name %> ">
                        <div class="description">
                            <p class="nameProduct"><%= product.name %></p>
                            <p class="price">$<%= product.price %></p>
                        </div>
                    </a></article>
                       
                  <% }) %>
              </div>

      </section>
    </main>

    <%- include('partials/footer')  %> 
    
  </body>
</html>
